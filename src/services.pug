extends pug/base

append vars
    - title = 'Сервисные центры'
    - meta.description = 'Описание страницы'
    - meta.viewport = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'
    - link.icon = './favicon.ico'
    - meta.formatDetection = 'telephone=no'
    - meta.themeColor = '#000'
    - defaultLink = 'javascript:void(0);'
    - body.classList = ['inner-page'];

block content
    include pages/header
    .content
        .container
            .navigation
                .navigation-title
                    h1 Сервисные центры
                <ul class="crumbs">
                    <li>
                        <a href="/" class="nav-home" title="На Главную"></a>
                    </li>
                    <li class="active">
                        <a href="#" title="Сервисные центры">Сервисные центры</a>
                    </li>
                </ul>
            .services
                .services-wrapper
                    <div class="jsmaps-wrapper" id="uzbekistan-map" data-txt="Выберите область">
                        .jsmaps-btn
                            a(href="https://goo.gl/maps/RvP54fw6PTkSfpyB8" target="_blank").btn#mapsLink
                                | Показать в Google карте
                    </div>
                    .services-maps
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d749.5753300218325!2d69.20933653305856!3d41.280546151582506!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2s!4v1565007839310!5m2!1sru!2s" frameborder="0" style="border:0" allowfullscreen id="iframeSrc"></iframe>
                script
                    include ./js/json/json.js
    include pages/footer